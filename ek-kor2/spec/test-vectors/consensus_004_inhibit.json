{
  "id": "consensus_004",
  "name": "consensus_inhibit",
  "module": "consensus",
  "function": "consensus_inhibit",
  "description": "Inhibit a competing proposal",

  "setup": {
    "init": {"my_id": 1},
    "propose": {
      "proposal_type": "ModeChange",
      "data": 42,
      "threshold": 0.67,
      "now": 1000000
    },
    "ballot_id": 1
  },

  "input": {
    "ballot_id": 1,
    "now": 1010000
  },

  "expected": {
    "return": "OK",
    "ballot_state": {
      "result": "Cancelled",
      "completed": true
    }
  },

  "notes": [
    "Inhibit immediately cancels the ballot",
    "Used for mutual exclusion between competing proposals",
    "e.g., can't switch to mode A and mode B simultaneously"
  ]
}
