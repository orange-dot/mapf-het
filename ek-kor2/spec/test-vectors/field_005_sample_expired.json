  "function": "field_sample",
  "description": "Reject sampling expired field (elapsed > 5*tau)",

  "setup": {
    "publish": {
      "module_id": 42,
      "field": {
        "load": 1.0
      },
      "timestamp": 1000000
    }
  },

  "input": {
    "target_id": 42,
    "now": 1600000
  },

  "expected": {
